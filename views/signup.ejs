<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <link href="./css/styles.css" rel="stylesheet">
    <title>
        <%= title %>
    </title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="./css/styles.css" rel="stylesheet">
</head>
<body>
<div class="grid grid-cols-6">
    <div class="col-start-3 col-span-2">
        <h6 class="py-4">Signup as a new user</h6>
        <% if(messages && messages.error && messages.error.length > 0)  { %>
            <% for(var i=0; i<messages.error.length; i++) { %>
                <h5 class="inline-block px-2 py-1 mx-2 my-1 rounded bg-red-200 text-red-600 border border-red-400">
                    <%= messages.error[i] %>
                </h5>
            <% } %>
        <% } %>
        <form action="/users" method="post">
            <div class="py-3">
                <label>FirstName:</label>
                <input type="text" name="first_name" placeholder="FirstName" class="border border-red-300 rounded text-gray-900 w-full p-2">
            </div>
            <div class="py-3">
                <label>LastName:</label>
                <input type="text" name="last_name" placeholder="lastName" class="border border-red-300 rounded text-gray-900 w-full p-2" required >
            </div>
            <div class="py-3">
                <label>Email:</label>
                <input type="email" name="email" placeholder="abcd@email.com" class="border border-red-300 rounded text-gray-900 w-full p-2" required>
            </div>
            <div class="py-3">
                <label>Password:</label>
                <input type="password" name="password" placeholder="password" class="border border-red-300 rounded text-gray-900 w-full p-2">
            </div>
            <div class="py-3">
                <label for="selectField">Are You an Admin:</label>
                <select id="selectField">
                    <option value="option1" name="is_admin">No</option>
                    <option value="option2">Yes</option>
                </select>
            </div>
            <div class="py-3" id="inputFieldWrapper">
                <label for="inputField">Enter master password</label>
                <input  id="inputField" type="password" name="master_password" placeholder="master password" class="border border-red-300 rounded text-gray-900 w-full p-2">
            </div>
            <div class="py-3">
                <button type="submit" class="bg-red-600 hover:bg-red-800 text-white px-5 py-1.5 rounded font-medium mr-2 mb-2">Sign up</button>
            </div>
        </form>
    </div>
</div>
<script>
  // Get references to the select field and the input field wrapper
  const selectField = document.querySelector('#selectField');
  const inputFieldWrapper = document.querySelector('#inputFieldWrapper');

  // Hide the input field by default
  inputFieldWrapper.style.display = 'none';

  // Show or hide the input field when the dropdown value changes
  selectField.addEventListener('change', function() {
    if (selectField.value === 'option2') {
      inputFieldWrapper.style.display = 'block';
    } else {
      inputFieldWrapper.style.display = 'none';
    }
  });

</script>
</body>
</html>
